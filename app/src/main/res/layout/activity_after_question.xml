<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Full-screen VideoView for background video -->

    <!-- Get Started Button -->

    <ImageView
        android:id="@+id/WTGbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="2dp"
        android:scaleType="centerCrop"
        android:src="@color/LTGreen" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="212dp"
        android:layout_height="298dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="34dp"
        app:srcCompat="@drawable/final_logo" />


    <TextView
        android:id="@+id/wtg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-16dp"
        android:layout_marginEnd="55dp"
        android:fontFamily="@font/poppinsregular"
        android:gravity="center"
        android:text="@string/WTG"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/wtgm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/afacad"
        android:gravity="center"
        android:text="@string/WTGnote"
        android:textColor="#000000"
        android:textSize="22sp" />

    <Button
        android:id="@+id/nextbtn"
        android:layout_width="231dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="159dp"
        android:background="@drawable/calculate"
        android:fontFamily="@font/afacad"
        android:text="@string/savequest"
        android:textAllCaps="false"
        android:textColor="@color/Brown"
        android:textSize="18sp" />


</RelativeLayout>