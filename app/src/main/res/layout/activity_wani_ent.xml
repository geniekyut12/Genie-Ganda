<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f1ec"
    tools:context=".Wani_Ent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Rounded Header with Image -->
        <LinearLayout
            android:id="@+id/masugidHeader"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/masugidbg"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Logo Image -->
        <ImageView
            android:id="@+id/wani_logo"
            android:contentDescription="@string/wanilogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="-75dp"
            android:src="@drawable/wani_circle"
            app:layout_constraintTop_toBottomOf="@id/masugidHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/waniDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/Wani"
            android:textColor="#000000"
            android:fontFamily="@font/poppinsregular"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/wani_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Description -->

        <TextView
            android:id="@+id/wani_waff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/afacad"
            android:text="@string/sawaff"
            android:textColor="#777777"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/waniDes" />

        <TextView
            android:id="@+id/wani_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:padding="16dp"
            android:text="@string/wanidesc"
            android:textColor="@color/entsoc"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wani_waff" />

        <ImageView
            android:id="@+id/wanipic"
            android:contentDescription="@string/wanipic"
            android:layout_width="450dp"
            android:layout_height="196dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/wanipic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wani_desc" />

        <!-- Inquiry Label -->

        <!-- Instagram Section -->

        <TextView
            android:id="@+id/waniEnq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/enqEnt"
            android:textColor="#000000"
            android:textSize="18sp"
            android:fontFamily="@font/afacad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.086"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wanipic" />

        <ImageView
            android:id="@+id/wani_ig"
            android:contentDescription="@string/waniIG"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ig_icon"
            app:layout_constraintTop_toBottomOf="@id/waniEnq"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0." />

        <TextView
            android:id="@+id/wani_ig_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="@string/waniIG"
            android:textSize="18sp"
            android:textColor="@color/entsoc"
            android:fontFamily="@font/afacad"
            app:layout_constraintTop_toBottomOf="@id/waniEnq"
            app:layout_constraintStart_toEndOf="@id/wani_ig" />

        <!-- Gmail Section -->
        <ImageView
            android:id="@+id/wani_num"
            android:contentDescription="@string/waniPhone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/phone_icon"
            app:layout_constraintTop_toBottomOf="@id/wani_ig_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.05" />

        <TextView
            android:id="@+id/wani_num_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="@string/wani_num"
            android:textSize="18sp"
            android:textColor="@color/entsoc"
            android:fontFamily="@font/afacad"
            app:layout_constraintTop_toBottomOf="@id/wani_ig_text"
            app:layout_constraintStart_toEndOf="@id/wani_num" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
