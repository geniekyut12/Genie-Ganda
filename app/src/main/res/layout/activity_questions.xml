<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wavebg">

    <!-- Logo Image at the top -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="212dp"
        android:layout_height="298dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/final_logo"
        android:contentDescription="@string/logo_description" />

    <!-- Motivational Text centered under the logo -->
    <TextView
        android:id="@+id/motivationalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/afacad"
        android:gravity="center"
        android:maxWidth="300dp"
        android:text="@string/subtitle"
        android:textColor="@color/Green"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Descriptive Text below motivational text -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/motivationalText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/afacad"
        android:gravity="center"
        android:maxWidth="300dp"
        android:text="@string/description"
        android:textColor="@color/LGreen"
        android:textSize="16sp"
        android:textStyle="bold" />


    <!-- Calculate Button at the bottom -->
    <Button
        android:id="@+id/calculate"
        android:layout_width="231dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/calculate"
        android:fontFamily="@font/afacad"
        android:text="@string/calulate"
        android:textAllCaps="false"
        android:textColor="@color/Brown"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
