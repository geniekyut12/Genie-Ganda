<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF4F1"
    tools:context=".PlayMaker_Ent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Rounded Header with Image -->
        <LinearLayout
            android:id="@+id/playmHeader"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/masugidbg"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Logo Image -->
        <ImageView
            android:id="@+id/playm_logo"
            android:contentDescription="@string/playmlogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="-75dp"
            android:src="@drawable/playm_circle"
            app:layout_constraintTop_toBottomOf="@id/playmHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/playmDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/playmtitle"
            android:textColor="#000000"
            android:fontFamily="@font/poppinsregular"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/playm_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Description -->

        <TextView
            android:id="@+id/playm_mach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/afacad"
            android:text="@string/jackofpie"
            android:textColor="#777777"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playmDes" />

        <TextView
            android:id="@+id/playm_Des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:padding="16dp"
            android:text="@string/playmdesc"
            android:textColor="@color/entsoc"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playm_mach" />

        <ImageView
            android:id="@+id/plaympic"
            android:layout_width="450dp"
            android:layout_height="196dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/plaympic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playm_Des" />

        <!-- Inquiry Label -->

        <!-- Instagram Section -->

        <TextView
            android:id="@+id/playmEnq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/enqEnt"
            android:textColor="#000000"
            android:textSize="18sp"
            android:fontFamily="@font/afacad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.086"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plaympic" />

        <ImageView
            android:id="@+id/playm_fb"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/fb_icon"
            app:layout_constraintTop_toBottomOf="@id/playmEnq"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0." />

        <TextView
            android:id="@+id/playm_fb_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="@string/playm_fb"
            android:textSize="18sp"
            android:textColor="@color/entsoc"
            android:fontFamily="@font/afacad"
            app:layout_constraintTop_toBottomOf="@id/playmEnq"
            app:layout_constraintStart_toEndOf="@id/playm_fb" />

        <!-- Gmail Section -->
        <ImageView
            android:id="@+id/playm_gmail"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/gmail_icon"
            app:layout_constraintTop_toBottomOf="@id/playm_fb_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.05" />

        <TextView
            android:id="@+id/mas_mail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="@string/mas_email"
            android:textSize="18sp"
            android:textColor="@color/entsoc"
            android:fontFamily="@font/afacad"
            app:layout_constraintTop_toBottomOf="@id/playm_fb_text"
            app:layout_constraintStart_toEndOf="@id/playm_gmail" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
